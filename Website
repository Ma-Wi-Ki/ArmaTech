  from {
    opacity: 0;
    transform: translateY(24px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-in {
  opacity: 0;
  transform: translateY(24px);
}

.animate-in.visible {
  animation: fadeUp 0.7s var(--ease-out) forwards;
}

